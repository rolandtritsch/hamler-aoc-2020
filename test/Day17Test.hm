module Day17Test where

import Prelude

import Test.QuickCheck (TestGroup(..), TestResult, quickCheck1)

import Day17 as D17

shouldBe :: ([Integer] -> Integer) -> [Integer] -> Integer -> Integer -> Boolean
shouldBe f is n _ = f is == n

test :: TestGroup (Integer -> IO TestResult)
test = TxG "Day17" [
    TxG "Part1" [
        Exe [
            quickCheck1 "shouldBe 15" (shouldBe D17.part1 (D17.input "./input/Day17p1.txt") 15)
        ]
    ],
    TxG "Part2" [ 
        Exe [
            quickCheck1 "shouldBe 120" (shouldBe D17.part2 (D17.input "./input/Day17p1.txt") 120)
        ]
    ]
]
