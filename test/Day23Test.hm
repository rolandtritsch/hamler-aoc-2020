module Day23Test where

import Prelude

import Test.QuickCheck (TestGroup(..), TestResult, quickCheck1)

import Day23 as D23

shouldBe :: ([Integer] -> Integer) -> [Integer] -> Integer -> Integer -> Boolean
shouldBe f is n _ = f is == n

test :: TestGroup (Integer -> IO TestResult)
test = TxG "Day23" [
    TxG "Part1" [
        Exe [
            quickCheck1 "shouldBe 15" (shouldBe D23.part1 (D23.input "./input/Day23p1.txt") 15)
        ]
    ],
    TxG "Part2" [ 
        Exe [
            quickCheck1 "shouldBe 120" (shouldBe D23.part2 (D23.input "./input/Day23p1.txt") 120)
        ]
    ]
]
