module Day21Test where

import Prelude

import Test.QuickCheck (TestGroup(..), TestResult, quickCheck1)

import Day21 as D21

shouldBe :: ([Integer] -> Integer) -> [Integer] -> Integer -> Integer -> Boolean
shouldBe f is n _ = f is == n

test :: TestGroup (Integer -> IO TestResult)
test = TxG "Day21" [
    TxG "Part1" [
        Exe [
            quickCheck1 "shouldBe 15" (shouldBe D21.part1 (D21.input "./input/Day21p1.txt") 15)
        ]
    ],
    TxG "Part2" [ 
        Exe [
            quickCheck1 "shouldBe 120" (shouldBe D21.part2 (D21.input "./input/Day21p1.txt") 120)
        ]
    ]
]
