module Day06Test where

import Prelude

import Test.QuickCheck (TestGroup(..), TestResult, quickCheck1)

import Day06 as D06

shouldBe :: ([Integer] -> Integer) -> [Integer] -> Integer -> Integer -> Boolean
shouldBe f is n _ = f is == n

test :: TestGroup (Integer -> IO TestResult)
test = TxG "Day06" [
    TxG "Part1" [
        Exe [
            quickCheck1 "shouldBe 15" (shouldBe D06.part1 (D06.input "./input/Day06p1.txt") 15)
        ]
    ],
    TxG "Part2" [ 
        Exe [
            quickCheck1 "shouldBe 120" (shouldBe D06.part2 (D06.input "./input/Day06p1.txt") 120)
        ]
    ]
]
