module Day12Test where

import Prelude

import Test.QuickCheck (TestGroup(..), TestResult, quickCheck1)

import Day12 as D12

shouldBe :: ([Integer] -> Integer) -> [Integer] -> Integer -> Integer -> Boolean
shouldBe f is n _ = f is == n

test :: TestGroup (Integer -> IO TestResult)
test = TxG "Day12" [
    TxG "Part1" [
        Exe [
            quickCheck1 "shouldBe 15" (shouldBe D12.part1 (D12.input "./input/Day12p1.txt") 15)
        ]
    ],
    TxG "Part2" [ 
        Exe [
            quickCheck1 "shouldBe 120" (shouldBe D12.part2 (D12.input "./input/Day12p1.txt") 120)
        ]
    ]
]
