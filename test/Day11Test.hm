module Day11Test where

import Prelude

import Test.QuickCheck (TestGroup(..), TestResult, quickCheck1)

import Day11 as D11

shouldBe :: (D11.Seats -> Integer) -> D11.Seats -> Integer -> Integer -> Boolean
shouldBe f is n _ = f is == n

test :: TestGroup (Integer -> IO TestResult)
test = TxG "Day11" [
    TxG "Part1" [
        Exe [
            quickCheck1 "shouldBe 100" (shouldBe D11.part1 (D11.input "./input/Day11p1test.txt") 100),
            quickCheck1 "shouldBe 810" (shouldBe D11.part1 (D11.input "./input/Day11p1.txt") 8820)
        ]
    ],
    TxG "Part2" [ 
        Exe [
            quickCheck1 "shouldBe 810" (shouldBe D11.part2 (D11.input "./input/Day11p1.txt") 8820)
        ]
    ]
]
