module Day11Test where

import Prelude

import Test.QuickCheck (TestGroup(..), TestResult, quickCheck1)

import Day11 as D11

shouldBe :: ([Integer] -> Integer) -> [Integer] -> Integer -> Integer -> Boolean
shouldBe f is n _ = f is == n

test :: TestGroup (Integer -> IO TestResult)
test = TxG "Day11" [
    TxG "Part1" [
        Exe [
            quickCheck1 "shouldBe 15" (shouldBe D11.part1 (D11.input "./input/Day11p1.txt") 15)
        ]
    ],
    TxG "Part2" [ 
        Exe [
            quickCheck1 "shouldBe 120" (shouldBe D11.part2 (D11.input "./input/Day11p1.txt") 120)
        ]
    ]
]
