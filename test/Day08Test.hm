module Day08Test where

import Prelude

import Test.QuickCheck (TestGroup(..), TestResult, quickCheck1)

import Day08 as D08

shouldBe :: ([Integer] -> Integer) -> [Integer] -> Integer -> Integer -> Boolean
shouldBe f is n _ = f is == n

test :: TestGroup (Integer -> IO TestResult)
test = TxG "Day08" [
    TxG "Part1" [
        Exe [
            quickCheck1 "shouldBe 15" (shouldBe D08.part1 (D08.input "./input/Day08p1.txt") 15)
        ]
    ],
    TxG "Part2" [ 
        Exe [
            quickCheck1 "shouldBe 120" (shouldBe D08.part2 (D08.input "./input/Day08p1.txt") 120)
        ]
    ]
]
