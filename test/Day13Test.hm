module Day13Test where

import Prelude

import Test.QuickCheck (TestGroup(..), TestResult, quickCheck1)

import Day13 as D13

shouldBe :: ([Integer] -> Integer) -> [Integer] -> Integer -> Integer -> Boolean
shouldBe f is n _ = f is == n

test :: TestGroup (Integer -> IO TestResult)
test = TxG "Day13" [
    TxG "Part1" [
        Exe [
            quickCheck1 "shouldBe 15" (shouldBe D13.part1 (D13.input "./input/Day13p1.txt") 15)
        ]
    ],
    TxG "Part2" [ 
        Exe [
            quickCheck1 "shouldBe 120" (shouldBe D13.part2 (D13.input "./input/Day13p1.txt") 120)
        ]
    ]
]
