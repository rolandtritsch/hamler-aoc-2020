module Day16Test where

import Prelude

import Test.QuickCheck (TestGroup(..), TestResult, quickCheck1)

import Day16 as D16

shouldBe :: (D16.Notes-> Integer) -> D16.Notes -> Integer -> Integer -> Boolean
shouldBe f is n _ = f is == n

test :: TestGroup (Integer -> IO TestResult)
test = TxG "Day16" [
    TxG "Part1" [
        Exe [
            quickCheck1 "shouldBe 4" (shouldBe D16.part1 (D16.input "./input/Day16p1test.txt") 4),
            quickCheck1 "shouldBe 236" (shouldBe D16.part1 (D16.input "./input/Day16p1.txt") 236)
        ]
    ],
    TxG "Part2" [ 
        Exe [
            quickCheck1 "shouldBe 236" (shouldBe D16.part2 (D16.input "./input/Day16p1.txt") 236)
        ]
    ]
]
