module Day19Test where

import Prelude

import Test.QuickCheck (TestGroup(..), TestResult, quickCheck1)

import Day19 as D19

shouldBe :: ([Integer] -> Integer) -> [Integer] -> Integer -> Integer -> Boolean
shouldBe f is n _ = f is == n

test :: TestGroup (Integer -> IO TestResult)
test = TxG "Day19" [
    TxG "Part1" [
        Exe [
            quickCheck1 "shouldBe 15" (shouldBe D19.part1 (D19.input "./input/Day19p1.txt") 15)
        ]
    ],
    TxG "Part2" [ 
        Exe [
            quickCheck1 "shouldBe 120" (shouldBe D19.part2 (D19.input "./input/Day19p1.txt") 120)
        ]
    ]
]
