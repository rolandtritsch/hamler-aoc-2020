module Day20Test where

import Prelude

import Test.QuickCheck (TestGroup(..), TestResult, quickCheck1)

import Day20 as D20

shouldBe :: ([Integer] -> Integer) -> [Integer] -> Integer -> Integer -> Boolean
shouldBe f is n _ = f is == n

test :: TestGroup (Integer -> IO TestResult)
test = TxG "Day20" [
    TxG "Part1" [
        Exe [
            quickCheck1 "shouldBe 15" (shouldBe D20.part1 (D20.input "./input/Day20p1.txt") 15)
        ]
    ],
    TxG "Part2" [ 
        Exe [
            quickCheck1 "shouldBe 120" (shouldBe D20.part2 (D20.input "./input/Day20p1.txt") 120)
        ]
    ]
]
