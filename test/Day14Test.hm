module Day14Test where

import Prelude

import Test.QuickCheck (TestGroup(..), TestResult, quickCheck1)

import Day14 as D14

shouldBe :: (D14.Program -> Integer) -> D14.Program -> Integer -> Integer -> Boolean
shouldBe f is n _ = f is == n

test :: TestGroup (Integer -> IO TestResult)
test = TxG "Day14" [
    TxG "Part1" [
        Exe [
            quickCheck1 "shouldBe 1" (shouldBe D14.part1 (D14.input "./input/Day14p1test.txt") 1),
            quickCheck1 "shouldBe 100" (shouldBe D14.part1 (D14.input "./input/Day14p1.txt") 100)
        ]
    ],
    TxG "Part2" [ 
        Exe [
            quickCheck1 "shouldBe 100" (shouldBe D14.part2 (D14.input "./input/Day14p1.txt") 100)
        ]
    ]
]
